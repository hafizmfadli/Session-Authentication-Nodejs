<%- include('../partials/head') %>

<header>
    <%- include('../partials/header') %> 
</header>

<div class="bg">
    <div class="container">
        <form>
            <h2>Masuk</h2>
            <label for="email">Email</label>
            <input type="text" name="email" required>
            <div class="email error"></div>
    
            <label for="password">Password</label>
            <input type="password" name="password" required>
            <div class="password error"></div>
    
            <button>Masuk</button>
            <a href="/signup">Belum punya akun ?</a>
        </form>
    </div>
</div>

<script>
    // 1. ambil form
    const form = document.querySelector('form')
    let emailError = document.querySelector('.email.error')
    let passwordError = document.querySelector('.password.error')

    form.addEventListener('submit', async (e) => {
        e.preventDefault()

        // 2. ambil email dan password
        const email = form.email.value
        const password = form.password.value

        emailError.textContent = ''
        passwordError.textContent = ''

        try {
           
            const res = await fetch('/login', {
                method: 'POST',
                body: JSON.stringify({ email, password }),
                headers: { 'Content-Type': 'application/json'}
            })

            const payload = await res.json()
            
            if(payload.errors){
                let emailErrorMsg = ''
                let passwordErrorMsg = ''
                payload.errors.forEach(item => {
                    if(item.param === 'email' && !emailErrorMsg){
                        emailErrorMsg = item.msg
                    }
                    if(item.param === 'password' && !passwordErrorMsg){
                        passwordErrorMsg = item.msg
                    }
                })
                emailError.textContent = emailErrorMsg
                passwordError.textContent = passwordErrorMsg 
            }

            if(payload.data.id){
                location.assign('/')
            }
        } catch (error) {
            console.log(error)
        }
    })
</script>

<footer>
    <%- include('../partials/footer') %> 
</footer>